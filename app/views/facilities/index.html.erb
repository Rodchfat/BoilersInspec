<p id="notice"><%= notice %></p>
<div class="row">
<h1>Listing Facilities</h1>
  <div class="pull-right range-query">
    <%= form_tag facilities_path, method: :get do %>
    <%= text_field_tag 'search[date_form]', @search.date_from %>
    <%= text_field_tag 'search[date_form]', @search.date_to %>
    <%= submit_tag 'search', class: 'btn search-button' %>
    <% end %>
  </div>
</div>
  
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility.name %></td>
        <td><%= facility.date.strftime("%m/%d/%Y") %></td>
        <td><%= link_to 'Show', facility, class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_facility_path(facility), class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

<%= link_to 'New Facility', new_facility_path, class: "btn btn-primary btn-sm" %>
