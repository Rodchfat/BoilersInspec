<p id="notice"><%= notice %></p>

<h1>Listing Facilities</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility.name %></td>
        <td><%= facility.date %></td>
        <td><%= link_to 'Show', facility, class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_facility_path(facility), class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Facility', new_facility_path, class: "btn btn-primary btn-sm" %>
