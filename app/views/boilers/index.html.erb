<p id="notice"><%= notice %></p>

<h1>Listing Boilers</h1>
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Make</th>
      <th>manfacture</th>
      <th>Year</th>
      <th>Facility</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boilers.each do |boiler| %>
      <tr>
        <td><%= boiler.make %></td>
        <td><%= boiler.manfacture %></td>
        <td><%= boiler.year.strftime("%m/%d/%Y") %></td>
        <td><%= boiler.facility.name %></td>
        <td><%= link_to 'Show', facility_boiler_path(@facility, boiler), class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_facility_boiler_path(@facility, boiler), class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Delete', [boiler.facility, boiler],
               method: :delete,
               data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

<%= link_to 'New Boiler', new_facility_boiler_path(@facility), class: "btn btn-primary btn-sm" %> </br>
