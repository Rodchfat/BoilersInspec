<p id="notice"><%= notice %></p>

<h1>Listing Boilers</h1>

<table>
  <thead>
    <tr>
      <th>Make</th>
      <th>Type</th>
      <th>Year</th>
      <th>Facility</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boilers.each do |boiler| %>
      <tr>
        <td><%= boiler.make %></td>
        <td><%= boiler.type %></td>
        <td><%= boiler.year %></td>
        <td><%= boiler.facility.name %></td>
        <td><%= link_to 'Show', [boiler.facility, boiler] %></td>
        <td><%= link_to 'Edit', [boiler.facility, boiler] %></td>
        <td><%= link_to 'Delete', [boiler.facility, boiler],
               method: :delete,
               data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

